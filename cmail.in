#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=#
## Get password file gcos (full name) entry
sub get_pw_gcos {
    local ($PW_GCOS) ;
    if (! $PW_GCOS) {
	($dummy, $PW_GCOS) = &get_pw_entry () ;
	$PW_GCOS =~ s/^\s*([^,()]+[^ ,()])[ ]*[,()].*$/$1/;
	if ($PW_GCOS =~ /^([^,()]+)\s+([^\s,()]+)$/) { ## Multi-word name
	    $PW_GCOS = $2 . ", " . $1 ;
	} elsif ($PW_GCOS !~ /^([^\s,()]+)/) { ## No sensible gcos entry 
	    $PW_GCOS = "" ;
	}			## Else leave it as one word
	&debug ("PW full name is \"$PW_GCOS\"\n");
    }
    return $PW_GCOS ;
}
