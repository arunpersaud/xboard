## Get the date
sub get_date {
    local ($the_time) = time ;
    local ($sec, $min, $hour, $mday, $mon, $year, $wday, $yday, $isdst) =
	localtime ($the_time) ;
    $mon ++ ;
    $year += 1900 ;
    if ($mon < 10) {
	$mon = "0$mon" ;
    }
    if ($mday < 10) {
        $mday = "0$mday" ;
    }
    "$year.$mon.$mday" ;
}
