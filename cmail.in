#=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=#
## Sort two filenames by the numeric suffix
sub sort_by_numeric_suffix {
    $a =~ /[.](\d+)$/ ; local ($na) = $1 ;
    $b =~ /[.](\d+)$/ ; local ($nb) = $1 ;

    return ($na <=> $nb) ;
}
