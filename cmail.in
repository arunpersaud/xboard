## Print verbose diagnostics for debugging
sub debug {
    if ($DEBUG) {
	local ($old) = select ;	## Remember selected output
	select (logfile) ;
	$| = 1 ;		## Keep it flushed
	print @_ ;		## Print arguments
	select ($old) ;
    }
}
